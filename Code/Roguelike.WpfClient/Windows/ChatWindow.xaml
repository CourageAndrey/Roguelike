<wpfClient:RoguelikeWindow x:Class="Roguelike.WpfClient.Windows.ChatWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpfClient="clr-namespace:Roguelike.WpfClient"
        Title="ChatWindow" Height="300" Width="300" Loaded="loaded">
	<DockPanel LastChildFill="True">
		<TextBox IsReadOnly="True" DockPanel.Dock="Top" Name="_textName" />
		<TextBox IsReadOnly="True" DockPanel.Dock="Top" Name="_textSocialGroup" />
		<TextBox IsReadOnly="True" DockPanel.Dock="Top" Name="_textAttitude" />
		<ListBox DockPanel.Dock="Right" Name="_listTopics" />
		<WebBrowser Name="_dialogArea" />
	</DockPanel>
</wpfClient:RoguelikeWindow>
